<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Feature Buttons Grid -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quick Access"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btn_view_dashboard"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Dashboard"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/btn_square_rounded"/>

            <Button
                android:id="@+id/btn_feature2"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Tính Năng 2"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/btn_square_rounded"/>

            <Button
                android:id="@+id/btn_feature3"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Tính Năng 3"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/btn_square_rounded"/>

            <Button
                android:id="@+id/btn_feature4"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="Tính Năng 4"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/btn_square_rounded"/>
        </GridLayout>

        <!-- Media Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Media Management"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/gallery_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/media_gallery"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/cloud_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cloud_storage"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>