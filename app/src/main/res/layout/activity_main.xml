<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212">

    <!-- Box đếm bước chân -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#1E1E1E"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:elevation="6dp"
        android:clipToOutline="true"
        android:outlineProvider="background">

        <TextView
            android:id="@+id/tv_dashboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🚶‍♂️ Đếm bước chân hôm nay"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>


        <TextView
            android:id="@+id/tv_step_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 bước"
            android:textColor="#4CAF50"
            android:textSize="48sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_total_steps_sensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 bước"
            android:textColor="#4CAF50"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- 4 nút hình vuông chia 2 cột 2 hàng -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true">

        <!-- Nút Dashboard -->
        <Button
            android:id="@+id/btn_view_dashboard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Dashboard"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/btn_square_rounded"/>

        <!-- Nút 2 -->
        <Button
            android:id="@+id/btn_feature2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Tính Năng 2"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/btn_square_rounded"/>

        <!-- Nút 3 -->
        <Button
            android:id="@+id/btn_feature3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Tính Năng 3"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/btn_square_rounded"/>

        <!-- Nút 4 -->
        <Button
            android:id="@+id/btn_feature4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Tính Năng 4"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/btn_square_rounded"/>

    </GridLayout>

</LinearLayout>
